<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<?import com.jfoenix.controls.JFXPasswordField?>
<AnchorPane prefHeight="399.0" prefWidth="416.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.LoginViewController">
   <children>
      <ImageView fitHeight="341.0" fitWidth="425.0" layoutY="63.0" opacity="0.08">
         <image>
            <Image url="@../Imgs/Logo.png" />
         </image>
      </ImageView>
      <Label alignment="CENTER" contentDisplay="CENTER" layoutX="140.0" layoutY="127.0" prefHeight="34.0" prefWidth="127.0" text="Login">
         <font>
            <Font name="Berlin Sans FB Demi Bold" size="29.0" />
         </font>
      </Label>
      <JFXTextField fx:id="txtUserName" alignment="CENTER" layoutX="113.0" layoutY="189.0" prefHeight="25.0" prefWidth="180.0" promptText="User Name">
         <font>
            <Font name="System Bold Italic" size="12.0" />
         </font>
      </JFXTextField>
      <JFXPasswordField fx:id="txtPassword" alignment="CENTER" layoutX="113.0" layoutY="240.0" prefHeight="25.0" prefWidth="180.0" promptText="Password">
         <font>
            <Font name="System Bold Italic" size="12.0" />
         </font>
      </JFXPasswordField>
      <JFXButton fx:id="btnLogin" layoutX="167.0" layoutY="325.0" onAction="#btnLogin" text="Login" textAlignment="CENTER" textFill="#5b4949">
         <font>
            <Font name="System Bold Italic" size="18.0" />
         </font>
      </JFXButton>
      <CheckBox fx:id="chkAdmin" contentDisplay="CENTER" layoutX="85.0" layoutY="296.0" mnemonicParsing="false" text="Admin">
         <font>
            <Font name="System Bold Italic" size="12.0" />
         </font>
      </CheckBox>
      <CheckBox fx:id="chkEmployee" contentDisplay="CENTER" layoutX="265.0" layoutY="296.0" mnemonicParsing="false" text="Employee">
         <font>
            <Font name="System Bold Italic" size="12.0" />
         </font>
      </CheckBox>
      <ImageView fitHeight="108.0" fitWidth="425.0">
         <image>
            <Image url="@../Imgs/header.png" />
         </image>
      </ImageView>
   </children>
</AnchorPane>
